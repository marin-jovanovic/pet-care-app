@model IList<Domain.Pet>
@{
  ViewBag.Title = "Pettype";
}

<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Pet</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      @foreach (var item in Model)
      {
        <tr>
          <td><a asp-action="Details" asp-route-id="@item.Name">@item.Name</a></td>

          <td><a asp-route-id="@item.TypePetName">@item.TypePetName</a></td>
            <td>@item.Age</td>
            <td>@item.UserName</td>
          <td>
            <form method="post" asp-action="Delete" asp-route-id="@item.IdPetType">
                <button type="submit" class="btn btn-danger confirm-delete">Delete <i class="fas fa-trash-alt ms-1"></i></button>
            </form>
          </td>
        </tr>
      }
      </tbody>
  </table>
</div>
<p>

</p>

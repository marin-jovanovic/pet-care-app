@model IList<Domain.Role>
@{
  ViewBag.Title = "Roles";
}

<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Role name</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      @foreach (var item in Model)
      {
        <tr>
          <td>@item.RoleName</td>
          <td><a asp-action="Edit" asp-route-id="@item.RoleId" class="btn btn-dark">Edit <i class="fas fa-edit ms-1"></i></a></td>
          <td>
            <form method="post" asp-action="Delete" asp-route-id="@item.RoleId">
                <button type="submit" data-item-name="@item.RoleName" class="btn btn-danger confirm-delete">Delete <i class="fas fa-trash-alt ms-1"></i></button>
            </form>
          </td>
        </tr>
      }
      </tbody>
  </table>
</div>
<p>
  <a asp-action="Create" class="btn btn-sm btn-primary">Add new role</a>
</p>
